<%- include('./partials/header') %>

<div class="w-full h-screen flex flex-col items-center py-10">
  <h3 class="text-3xl font-bold mb-4">User Profile</h3>
  <% if(success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-blue-500">
      <span class="inline-block mt-1 mb-1 text-white"><%= success %></span>
    </div>
  <% } %>
  <% if(error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500">
      <span class="inline-block mt-1 mb-1 text-white"><%= error %></span>
    </div>
  <% } %>
  <div class="w-1/2 bg-white shadow-lg rounded-lg p-6">
    <h4 class="text-xl mb-2">Full Name: <%= user.fullname %></h4>
    <h4 class="text-xl mb-2">Email: <%= user.email %></h4>
    <% if(user.profileImage) { %>
      <img class="h-32 w-32 rounded-full mb-4" src="data:image/jpeg;base64,<%= user.profileImage.toString('base64') %>" alt="Profile Image">
    <% } else { %>
      <p class="mb-4">No profile image uploaded.</p>
    <% } %>
    <form action="/users/userprofile/upload" method="post" enctype="multipart/form-data">
      <input type="file" name="profileImage" class="py-2 px-4 rounded mb-3">
      <input type="submit" value="Upload Image" class="px-5 py-2 rounded bg-blue-500 text-white">
    </form>
  </div>
</div>

<%- include('./partials/footer') %>