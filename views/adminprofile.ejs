        <a class="block w-fit mb-2" href="/admin/create">Create New Product</a>
        <a class="block w-fit mb-2" href="/admin/adminprofile">Profile</a>
        <a class="block w-fit mb-2 text-red-500" href="/admin/logout">Logout</a>
      </div>
    </div>
    <main class="w-3/4 bg-white p-8 shadow ml-4">
      <h2 class="text-xl font-bold mb-4">Admin Profile</h2>
      <div class="bg-gray-100 p-6 rounded-lg shadow-inner">
        <h3 class="text-lg font-semibold mb-4">Admin Details</h3>
        <div class="mb-4">
          <p class="text-gray-700"><strong>Email:</strong> admin@gmail.com</p>
        </div>
        <div class="mb-4">
          <p class="text-gray-700"><strong>Role:</strong> Administrator</p>
        </div>
        <div class="mb-4">
