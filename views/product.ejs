<%- include('./partials/header') %>

<% var success = typeof success !== "undefined" ? success : ''; %>
<% var error = typeof error !== "undefined" ? error : ''; %>

<% if(success.length > 0) { %>
  <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
    <span class="inline-block mt-1 mb-1 text-white"><%= success %></span>
  </div>
<% } %>
<% if(error.length > 0) { %>
  <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
    <span class="inline-block mt-1 mb-1 text-white"><%= error %></span>
  </div>
<% } %>

<div class="min-h-screen flex items-start px-20 py-20">
  <div class="flex w-full">
    <!-- Product Image -->
    <div class="w-1/2 flex justify-center">
      <div class="w-96 h-96 flex items-center justify-center rounded-xl border-2 border-gray-300 shadow-md" style="background-color: <%= product.bgcolor %>;">
        <img class="h-80 object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
      </div>
    </div>
    <!-- Product Details -->
    <div class="w-1/2 pl-10">
      <h1 class="text-3xl font-bold mb-4" style="color: <%= product.textcolor %>;"><%= product.name %></h1>
      <div class="flex items-center space-x-2 mb-4">
        <% if (product.discount > 0) { %>
          <h2 class="text-2xl font-semibold text-gray-500 line-through">₹ <%= product.price %></h2>
          <h2 class="text-2xl font-bold text-green-600">₹ <%= product.price - product.discount %></h2>
        <% } else { %>
          <h2 class="text-2xl font-bold" style="color: <%= product.textcolor %>;">₹ <%= product.price %></h2>
        <% } %>
      </div>
      <h3 class="text-lg text-gray-600 mb-4">Discount: ₹ <%= product.discount || 0 %></h3>
      <p class="text-gray-700 mb-6" style="color: <%= product.textcolor %>;">
        <%= product.description || "This is a high-quality product designed for durability and style. Perfect for everyday use, it combines functionality with a sleek design." %>
      </p>
      <a href="/users/addtocart/<%= product._id %>" class="inline-block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
        Add to Cart
      </a>
      <a href="/users/shop" class="inline-block ml-4 text-blue-500 hover:text-blue-700 font-semibold">Back to Shop</a>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>